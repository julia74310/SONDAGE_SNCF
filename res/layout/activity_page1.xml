<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Page1">

    <ImageView
        android:id="@+id/idLogoSCNF2"
        android:layout_width="405dp"
        android:layout_height="125dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/sncf_logo" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="437dp"
        android:layout_height="57dp"
        android:layout_marginTop="7dp"
        android:background="#BE1860"
        android:backgroundTint="#BC1864"
        android:text="Application SNCF - 2023"
        android:textAlignment="center"
        android:textSize="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idSuivant1" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="313dp"
        android:layout_height="37dp"
        android:layout_marginStart="49dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="49dp"
        android:text="Votre avis sur le service ?"
        android:textAlignment="center"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idLogoSCNF2" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="346dp"
        android:layout_height="37dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="33dp"
        android:text="Votre avis sur la ponctualité ?"
        android:textAlignment="center"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idService" />

    <RadioGroup
        android:id="@+id/idService"
        android:layout_width="329dp"
        android:layout_height="164dp"
        android:layout_marginStart="39dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="43dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9">

        <RadioButton
            android:id="@+id/idService1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Très satisfait" />

        <RadioButton
            android:id="@+id/idService2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Satisfait" />

        <RadioButton
            android:id="@+id/idService3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Insufisant" />

    </RadioGroup>

    <RadioGroup
        android:id="@+id/idPonctualite"
        android:layout_width="339dp"
        android:layout_height="185dp"
        android:layout_marginStart="39dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="33dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10">

        <RadioButton
            android:id="@+id/idPonctualite1"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:text="Très satisfait" />

        <RadioButton
            android:id="@+id/idPonctualite2"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:text="Satisfait" />

        <RadioButton
            android:id="@+id/idPonctualite3"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:text="Insufisant" />

    </RadioGroup>

    <Button
        android:id="@+id/idSuivant1"
        android:layout_width="414dp"
        android:layout_height="64dp"
        android:layout_marginTop="10dp"
        android:text="Suivant"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idPonctualite" />

</androidx.constraintlayout.widget.ConstraintLayout>